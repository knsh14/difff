{
  "name": "difff",
  "displayName": "Difff - GitHub-like Git Diff Viewer",
  "description": "View git diffs in a GitHub-like interface with branch selection",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "difff",
          "title": "Difff",
          "icon": "resources/diff-icon.svg"
        }
      ]
    },
    "views": {
      "difff": [
        {
          "id": "difff.explorer",
          "name": "Git Diff Explorer",
          "icon": "resources/diff-icon.svg",
          "contextualTitle": "Difff Explorer"
        },
        {
          "id": "difff.comments",
          "name": "Comments",
          "icon": "$(comment-discussion)",
          "contextualTitle": "Comment Management"
        }
      ]
    },
    "commands": [
      {
        "command": "difff.selectBranches",
        "title": "Select Branches to Compare",
        "icon": "$(git-compare)"
      },
      {
        "command": "difff.refresh",
        "title": "Refresh Diff",
        "icon": "$(refresh)"
      },
      {
        "command": "difff.openFile",
        "title": "Open Diff in Editor"
      },
      {
        "command": "difff.viewDiff",
        "title": "View Diff",
        "icon": "$(open-preview)"
      },
      {
        "command": "difff.selectMode",
        "title": "Select Mode"
      },
      {
        "command": "difff.jumpToComment",
        "title": "Jump to Comment"
      },
      {
        "command": "difff.removeAllCommentsForKey",
        "title": "Remove All Comments",
        "icon": "$(trash)"
      },
      {
        "command": "difff.refreshComments",
        "title": "Refresh Comments",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "difff.selectBranches",
          "when": "view == difff.explorer",
          "group": "navigation@1"
        },
        {
          "command": "difff.refresh",
          "when": "view == difff.explorer",
          "group": "navigation@2"
        },
        {
          "command": "difff.refreshComments",
          "when": "view == difff.comments",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "difff.removeAllCommentsForKey",
          "when": "view == difff.comments && viewItem == commentKey",
          "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "prettier": "^3.6.2",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "simple-git": "^3.20.0"
  }
}
